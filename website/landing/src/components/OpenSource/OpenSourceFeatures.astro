---
/**
 * Open Source Features Section
 * Highlights that Cyberstrike is 100% open source
 */

import Button from "@components/Button/Button.astro";
import { Icon } from "astro-icon/components";

interface Feature {
  icon: string;
  title: string;
  description: string;
}

const features: Feature[] = [
  {
    icon: "tabler/brand-github",
    title: "100% Open Source",
    description: "AGPL-3.0 licensed. Fork it, modify it, self-host it. Full transparency, no hidden code.",
  },
  {
    icon: "tabler/users",
    title: "Community Driven",
    description: "Built by security professionals, for security professionals. Join our growing community.",
  },
  {
    icon: "tabler/key",
    title: "No Vendor Lock-in",
    description: "Bring your own API keys. Works with any LLM provider - OpenAI, Anthropic, local models.",
  },
  {
    icon: "tabler/code",
    title: "Contribute",
    description: "PRs welcome! Help us build the future of AI-powered penetration testing.",
  },
];

const stats = [
  { value: "5+", label: "AI Agents" },
  { value: "100+", label: "Security Tools" },
  { value: "AGPL", label: "License" },
  { value: "âˆž", label: "Possibilities" },
];
---

<section id="open-source" class="py-16 md:py-20">
  <div class="site-container">
    <!-- Header -->
    <div class="text-center mb-12">
      <div class="inline-flex items-center gap-2 bg-primary-500/10 text-primary-500 px-4 py-2 rounded-full mb-4">
        <Icon name="tabler/heart" class="size-5" />
        <span class="text-sm font-medium">Open Source Forever</span>
      </div>
      <h2 class="h2">Open Source</h2>
      <p class="description mt-4 max-w-2xl mx-auto">
        Cyberstrike is open source under AGPL-3.0. Free for personal use, research, and education.
        Commercial license available for enterprises. Powerful AI-driven security testing for everyone.
      </p>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-16">
      {stats.map((stat) => (
        <div class="text-center p-6 rounded-2xl bg-base-100 dark:bg-base-800/50 border border-base-200 dark:border-base-700">
          <div class="text-4xl font-bold text-primary-500 mb-2">{stat.value}</div>
          <div class="text-sm text-base-600 dark:text-base-400">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-12">
      {features.map((feature) => (
        <div class="p-6 rounded-2xl bg-base-100 dark:bg-base-800/50 border border-base-200 dark:border-base-700 hover:border-primary-500/50 transition-colors">
          <div class="flex items-start gap-4">
            <div class="p-3 rounded-xl bg-primary-500/10">
              <Icon name={feature.icon} class="size-6 text-primary-500" />
            </div>
            <div>
              <h3 class="text-lg font-semibold mb-2">{feature.title}</h3>
              <p class="text-base-600 dark:text-base-400">{feature.description}</p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center">
      <div class="inline-flex flex-col sm:flex-row gap-4">
        <Button
          variant="primary"
          href="https://github.com/CyberStrikeus/cyberstrike.io"
          target="_blank"
          class="inline-flex items-center gap-2"
        >
          <Icon name="tabler/brand-github" class="size-5" />
          View on GitHub
        </Button>
        <Button
          variant="outline"
          href="/docs"
          class="inline-flex items-center gap-2"
        >
          <Icon name="tabler/file-text" class="size-5" />
          Read the Docs
        </Button>
      </div>
      <p class="mt-6 text-sm text-base-500">
        Star us on GitHub to show your support!
      </p>
    </div>
  </div>
</section>
