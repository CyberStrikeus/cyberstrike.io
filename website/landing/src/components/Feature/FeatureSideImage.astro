---
/**
 * * These are alternating side cards with titles, text, and images
 * Recommend using 2 or 3 cards in a row
 */
import Badge from "@components/Badge/Badge.astro";
import FeatureCard from "@components/FeatureCard/FeatureCardSideImage.astro";
// images
import image1 from "@images/storm-1.webp";
import image2 from "@images/storm-2.webp";
import { Icon } from "astro-icon/components";

interface FeatureItem {
  badge: string; // badge text
  image: ImageMetadata; // an imported image
  title: string;
  description: string;
  href: string; // link to learn more
  buttonText: string; // button text
}

const featureData: FeatureItem[] = [
  {
    badge: "AI Agents",
    image: image1,
    title: "Autonomous Offensive Agents",
    description:
      "Five specialized AI agents handle different attack vectors: Cloud Security for AWS/Azure/GCP, Internal Network for lateral movement, Red Team for advanced persistent threats, Web Application for OWASP vulnerabilities, and Bug Hunter for bug bounty hunting.",
    href: "/waitlist",
    buttonText: "Join Waitlist",
  },
  {
    badge: "Elite Feature",
    image: image2,
    title: "Multi-Server Job Queue",
    description:
      "Elite plan unlocks distributed pentesting across up to 5 remote servers. The job queue system coordinates agents, manages tasks, and consolidates results - turning hours of manual work into automated orchestration.",
    href: "/waitlist",
    buttonText: "Join Waitlist",
  },
];
---

<section id="feature-side-image" class="my-12 overflow-hidden py-12">
  <div class="site-container">
    <!-- <div class="mx-auto mb-16 text-center md:max-w-4xl" data-mos="fade-up">
      <h2 class="h2 mb-4">The best choice for your needs</h2>
    </div> -->
    <div class="flex flex-col gap-16 md:gap-24">
      {
        featureData.map((feature, idx) => (
          <FeatureCard
            badge={feature.badge}
            title={feature.title}
            description={feature.description}
            image={feature.image}
            imageSide={idx % 2 === 0 ? "right" : "left"}
            href={feature.href}
            buttonText={feature.buttonText}
          />
        ))
      }
    </div>
  </div>
</section>
