---
import Button from "@components/Button/Button.astro";
import FooterLink from "@components/Footer/FooterLink.astro";
import SiteLogo from "@components/SiteLogo/SiteLogo.astro";
import SocialIcon from "@components/SocialIcon/SocialIcon.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";

import { getLocalizedRoute } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);

const today = new Date();
---

<footer class="mt-14 overflow-clip pt-16 pb-10">
  <div class="site-container">
    <div class="border-b-base-200 dark:border-b-base-800 border-b pb-10">
      <div class="flex flex-wrap">
        <div class="mb-6 w-full md:w-1/2">
          <div class="max-w-xs">
            <SiteLogo />
            <p class="description mt-11 tracking-tight">
              AI-powered penetration testing agent. Autonomous security assessments with Claude, GPT, and Gemini.
            </p>
          </div>
        </div>
        <div class="w-full md:w-1/2">
          <div class="flex flex-wrap justify-between gap-x-16 gap-y-8">
            <!-- first links column -->
            <div class="w-auto py-2">
              <h3 class="text-base-800 dark:text-base-300 mb-8 font-medium tracking-tight">
                Product
              </h3>
              <ul class="flex flex-col gap-3">
                <li>
                  <FooterLink href="/#features">Features</FooterLink>
                </li>
                <li>
                  <FooterLink href="/#pricing">Pricing</FooterLink>
                </li>
                <li>
                  <FooterLink href="https://docs.cyberstrike.io" newTab={true}>Documentation</FooterLink>
                </li>
              </ul>
            </div>

            <!-- second links column -->
            <div class="w-auto py-2">
              <h3 class="text-base-800 dark:text-base-300 mb-8 font-medium tracking-tight">
                Resources
              </h3>
              <ul class="flex flex-col gap-3">
                <li>
                  <FooterLink href="https://github.com/CyberStrikeus/cyberstrike.io" newTab={true}>GitHub</FooterLink>
                </li>
                <li>
                  <FooterLink href="https://discord.gg/cyberstrike" newTab={true}>Discord</FooterLink>
                </li>
                <li>
                  <FooterLink href="https://docs.cyberstrike.io/changelog" newTab={true}>Changelog</FooterLink>
                </li>
              </ul>
            </div>

            <!-- third links column -->
            <div class="w-auto py-2">
              <h3 class="text-base-800 dark:text-base-300 mb-8 font-medium tracking-tight">
                Legal
              </h3>
              <ul class="flex flex-col gap-3">
                <li>
                  <FooterLink href={getLocalizedRoute(currLocale, "/privacy-policy")}>Privacy Policy</FooterLink>
                </li>
                <li>
                  <FooterLink href={getLocalizedRoute(currLocale, "/terms")}>Terms of Service</FooterLink>
                </li>
                <li>
                  <FooterLink href={getLocalizedRoute(currLocale, "/contact")}>Contact</FooterLink>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="py-4">
      <div class="flex flex-wrap items-center justify-between">
        <div class="w-auto p-4">
          <p class="description tracking-tight">
            &copy; {today.getFullYear()}
            {" "}{siteData.name}. All rights reserved.
          </p>
        </div>
        <div class="w-auto p-4">
          <!-- Socials -->
          <div class="flex flex-col">
            <div class="flex gap-3">
              <SocialIcon
                href="https://github.com/CyberStrikeus/cyberstrike.io"
                icon="tabler/brand-github"
                social="GitHub"
              />
              <SocialIcon
                href="https://discord.gg/cyberstrike"
                icon="tabler/brand-discord"
                social="Discord"
              />
              <SocialIcon
                href="https://x.com/cyberstrike_io"
                icon="tabler/brand-x"
                social="X (Twitter)"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="sr-only">
      <p>
        A website template crafted with love by <a href="https://cosmicthemes.com/">Cosmic Themes</a
        >
      </p>
    </div>
  </div>
</footer>
