---
import Button from "@components/Button/Button.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { Icon } from "astro-icon/components";

import { getLocalizedRoute } from "@/js/translationUtils";

const currLocale = getLocaleFromUrl(Astro.url);
---

<div class="w-full">
  <div class="mb-8">
    <h1 class="h2 text-base-900 dark:text-base-200 mb-2 text-xl">Log in to Cyberstrike</h1>
    <p class="text-base-600 dark:text-base-400 tracking-tight">
      <span class="description">Don't have an account?</span>
      <a
        class="text-primary-500 hover:text-primary-600 whitespace-nowrap transition duration-200"
        href={getLocalizedRoute(currLocale, "/signup")}>Create account</a
      >
    </p>
  </div>
  <div class="mb-6">
    <form class="-m-2 flex flex-wrap" id="login__form" name="login__form">
      <div class="w-full p-2">
        <label for="login__email" aria-label="Email Address" class="block">
          <input
            class="form__input w-full"
            id="login__email"
            type="email"
            placeholder="Email address"
            required
          />
        </label>
      </div>
      <div class="w-full p-2">
        <label class="relative block transition">
          <input
            class="form__input w-full"
            id="login__password"
            type="password"
            placeholder="Password"
            required
          />
        </label>
      </div>
      <div class="w-full p-2">
        <div class="flex items-center justify-between mb-4">
          <label class="flex items-center gap-2 text-sm text-base-600 dark:text-base-400 cursor-pointer">
            <input type="checkbox" name="remember" class="rounded border-base-300 dark:border-base-600" />
            Remember me
          </label>
          <a
            class="text-primary-500 hover:text-primary-600 text-sm tracking-tight transition duration-200"
            href={getLocalizedRoute(currLocale, "/password-reset")}>Forgot password?</a
          >
        </div>
        <Button variant="primary" type="submit" class="w-full rounded-md before:rounded-md"
          >Sign In</Button
        >
      </div>
    </form>
  </div>
</div>
