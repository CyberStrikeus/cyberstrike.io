---
import Badge from "@components/Badge/Badge.astro";
import ContactForm from "@components/Forms/ContactForm.astro";
import { getLocaleFromUrl } from "@js/localeUtils";
import { getTranslatedData } from "@js/translationUtils";
// main layout
import BaseLayout from "@layouts/BaseLayout.astro";
import { Icon } from "astro-icon/components";

const currLocale = getLocaleFromUrl(Astro.url);
const siteData = getTranslatedData("siteData", currLocale);
---

<BaseLayout title="Contact Us" description="Get in touch with the Cyberstrike team for Enterprise solutions.">
  <div class="site-container mt-14">
    <section class="overflow-hidden pt-16 lg:py-28">
      <div class="flex flex-wrap">
        <div class="w-full p-8 md:w-1/2">
          <div class="mx-auto h-full max-w-lg md:ml-0">
            <Badge>Enterprise</Badge>
            <h1 class="h2">Ready to scale your security operations?</h1>
            <p class="description text-lg">
              Get custom pricing for your team. Our Enterprise plan includes per-seat licensing,
              on-premise deployment, BYOA (Bring Your Own AI), and a dedicated account manager.
            </p>
            <ul class="mt-6 space-y-3">
              <li class="flex items-center gap-2 text-base-600 dark:text-base-400">
                <Icon name="tabler/check" class="size-5 text-primary-500" />
                Per-seat licensing
              </li>
              <li class="flex items-center gap-2 text-base-600 dark:text-base-400">
                <Icon name="tabler/check" class="size-5 text-primary-500" />
                On-premise deployment
              </li>
              <li class="flex items-center gap-2 text-base-600 dark:text-base-400">
                <Icon name="tabler/check" class="size-5 text-primary-500" />
                Bring Your Own AI (BYOA)
              </li>
              <li class="flex items-center gap-2 text-base-600 dark:text-base-400">
                <Icon name="tabler/check" class="size-5 text-primary-500" />
                Dedicated account manager
              </li>
            </ul>
          </div>
        </div>
        <div class="mx-auto w-full max-w-xl p-8 md:mr-0 md:w-1/2">
          <ContactForm />
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
