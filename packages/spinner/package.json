{
  "name": "cyberstrike-spinner",
  "version": "0.0.6",
  "description": "A small & opinionated spinner library for Cyberstrike",
  "author": "Cyberstrike Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AUMLabs-net/cyberstrike.io",
    "directory": "packages/spinner"
  },
  "type": "module",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react.d.mts",
        "default": "./dist/react.mjs"
      }
    },
    "./solid": {
      "import": {
        "types": "./dist/solid.d.mts",
        "default": "./dist/solid.mjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "cyberstrike",
    "spinner",
    "cli",
    "terminal",
    "console",
    "tui"
  ],
  "scripts": {
    "build": "tsdown",
    "lint": "biome check .",
    "lint:fix": "biome check . --write"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@types/bun": "latest",
    "tsdown": "^0.16.0"
  },
  "peerDependencies": {
    "@cyberstrike/tui-core": "^0.1.49",
    "@cyberstrike/tui-solid": "^0.1.49",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "@cyberstrike/tui-solid": {
      "optional": true
    }
  },
  "dependencies": {
    "cli-spinners": "^3.3.0"
  }
}
