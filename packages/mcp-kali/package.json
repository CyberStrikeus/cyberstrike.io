{
  "name": "@cyberstrike-io/mcp-kali",
  "version": "0.1.1",
  "description": "MCP server exposing Kali Linux penetration testing tools",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-kali": "./dist/index.js",
    "mcp-kali-http": "./dist/http.js"
  },
  "files": [
    "dist/",
    "src/definitions/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/index.ts",
    "dev:http": "tsx src/http.ts",
    "start": "node dist/index.js",
    "start:http": "node dist/http.js",
    "docker:build": "docker build -t mcp-kali .",
    "docker:run": "docker run -p 3001:3001 -e MCP_ADMIN_TOKEN=${MCP_ADMIN_TOKEN} -v mcp-kali-data:/data mcp-kali"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "winston": "3.19.0",
    "winston-daily-rotate-file": "5.0.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "keywords": [
    "mcp",
    "kali",
    "linux",
    "pentest",
    "security",
    "tools"
  ],
  "author": "Cyberstrike Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/CyberStrikeus/cyberstrike.io",
    "directory": "packages/mcp-kali"
  },
  "bugs": {
    "url": "https://github.com/CyberStrikeus/cyberstrike.io/issues"
  },
  "license": "MIT"
}
